        <Image x:Name="image" Source="img.png" MouseUp="image_MouseUp" MouseDown="image_MouseDown"  HorizontalAlignment="Left" Height="50" Width="50" Margin="68,84,0,0" VerticalAlignment="Top"></Image>
    </Grid>
</Window>
