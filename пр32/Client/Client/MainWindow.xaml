<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Чат" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <TextBox x:Name="messages" Height="25" Margin="10,0,90,11" TextWrapping="Wrap" VerticalAlignment="Bottom"></TextBox>
        <Button Click="SendMessage" Content="Отправить" HorizontalAlignment="Right" Margin="0,0,10,11" VerticalAlignment="Bottom" Width="75" Height="25"></Button>
        <Border BorderBrush="Black" BorderThickness="1" Margin="10,10,10,41">
            <ScrollViewer>
                <StackPanel x:Name="parrent"></StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
